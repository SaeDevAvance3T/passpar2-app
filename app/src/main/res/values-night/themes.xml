<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (night mode) -->
    <style name="Base.Theme.PassPar2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Main theme with no ActionBar -->
    <style name="Theme.PassPar2" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Style nouveau_compte -->
    <style name="nouveau_compte_suivant" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/grande_marge_verticale</item>
        <item name="android:layout_marginRight">@dimen/grande_marge_verticale</item>
        <item name="android:layout_marginTop">@dimen/marge_horizontale</item>
        <item name="android:layout_marginBottom">@dimen/marge_horizontale</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/nouveau_compte_suivant</item>
    </style>

    <style name="nouveau_compte_saisie" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nouveau_compte_hauteur_saisie</item>
        <item name="android:layout_marginLeft">@dimen/grande_marge_horizontale</item>
        <item name="android:layout_marginRight">@dimen/grande_marge_horizontale</item>
        <item name="android:layout_marginTop">@dimen/marge_verticale</item>
        <item name="android:layout_marginBottom">@dimen/marge_verticale</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/nouveau_compte_saisie</item>
    </style>
</resources>
