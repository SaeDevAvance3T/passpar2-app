<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context="Accueil_fragment_parcours">

    <LinearLayout
        android:id="@+id/accueil_fragment_parcours"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- MapView avec hauteur FIXE pour empÃªcher le bug -->
        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nouveau_compte_suivant"
            style="@style/nouveau_compte_suivant"
            android:background="@color/vert"
            android:text="@string/nouveau_compte_suivant" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nouveau_compte_connecter"
            style="@style/nouveau_compte_suivant"
            android:text="@string/nouveau_compte_connecter"
            android:layout_marginBottom="45dp"
            android:onClick="clicRechercherEnChaine" />

    </LinearLayout>

</ScrollView>
