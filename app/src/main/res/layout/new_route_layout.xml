<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".NewRouteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/create_route"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itinerary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingBottom="10dp"
                android:text="Nom de l'itinÃ©raire: "
                android:textColor="@color/white"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/itinerary_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tapez ici"
                android:textColorHint="@color/white"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingBottom="10dp"
            android:text="@string/available_enterprises"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/enterpriselist"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/displayed_enterprises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@color/green"
            android:onClick="checkClick"
            android:text="@string/check_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>